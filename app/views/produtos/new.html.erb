<!DOCTYPE html>
<html>

<body>

<%= form_for Camisa.new do |f| %>
	Nome 
	<%= f.text_field :nome %>
	<br>

	Descrição 
	<%= f.text_area :descricao %>
	<br>

	Quantidade 
	<%= f.number_field :quantidade %>
	<br>

	Preco 
	<%= f.number_field :preco %>
	<br>

	<%= f.submit %>

<% end %>
</body>
</html>